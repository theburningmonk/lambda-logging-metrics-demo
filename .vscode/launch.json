  "version": "0.2.0",
  "configurations": [    
    {
      "type": "node",
      "request": "launch",
      "name": "custom-metrics",
      "program": "${workspaceRoot}/node_modules/.bin/sls",
      "args": [
        "invoke",
        "local",
        "-f",
        "custom-metrics",
        "-p",
        "events/log-message.json"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "usage-metrics",
      "program": "${workspaceRoot}/node_modules/.bin/sls",
      "args": [
        "invoke",
        "local",
        "-f",
        "usage-metrics",
        "-p",
        "events/log-message.json"
      ]
    }
  ]
}